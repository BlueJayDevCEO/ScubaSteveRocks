rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // --- 1. Marine Photos (User Uploads) ---
    // Path: marine-photos/{userId}/{fileName}
    match /marine-photos/{userId}/{allPaths=**} {
      // Security: Only the owner can upload/delete
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Accessibility: Everyone can read (Required for Global Map display)
      allow read: if true;
    }

    // --- 2. System/Seeded Photos ---
    // Path: marine-photos/system/{fileName}
    match /marine-photos/system/{allPaths=**} {
       allow read: if true;
       allow write: if false; // Admin upload only via Console
    }

    // --- 3. Public Assets (Static) ---
    // Path: public/logo.png, etc.
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // --- 4. Default Block ---
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}