rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ---- 1. Marine Photos (For Sighting Map) ----
    // Path used in services/marineSightings.ts: marine-photos/{userId}/{fileName}
    match /marine-photos/{userId}/{allPaths=**} {
      // Authenticated users can upload to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
      // Anyone can view the images (required for the public map)
      allow read: if true;
    }

    // ---- 2. Public Assets (Static) ----
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // ---- 3. Default Block ----
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}