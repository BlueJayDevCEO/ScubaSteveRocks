rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. App Configuration ---
    // Read-only for everyone (contains logo/avatar URLs)
    match /appMeta/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // --- 2. Marine Sightings (Global Map) ---
    match /marineSightings/{sightingId} {
      // Anyone can read (needed for the public map)
      allow read: if true;
      // Only authenticated users can upload
      allow create: if request.auth != null;
      // Users can only edit/delete their own submissions
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // --- 3. User Profiles & Mentoring Logs ---
    match /users/{userId} {
      // User can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // **NEW: Per-User Activity Folder**
      // Records history of chats, IDs, and quizzes for mentoring checks.
      // This ensures activities are siloed per user.
      match /activity_logs/{logId} {
        allow create: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- 4. Stripe Customers (Payments) ---
    // Required for "Run Payments with Stripe" extension
    match /customers/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth != null && request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth != null && request.auth.uid == uid;
      }
    }

    // --- 5. Default Block ---
    // Deny access to anything else not explicitly defined above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}